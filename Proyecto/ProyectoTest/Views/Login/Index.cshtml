
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login - CesArt</title>

    @Styles.Render("~/Content/css")


</head>
<body class="vh-100">
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">
                    <div class="px-5 ms-xl-4">
                        <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>

                    </div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <h2 class="mb-5 text-center">INICIAR SESIÓN</h2>
                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                        <div class="card-body mx-auto" style="max-width: 400px;">
                            <form action="@Url.Content("~/Login/Index")" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-outline mb-4">
                                    <input class="form-control" id="inputEmail" name="NCorreo" type="email" placeholder="correo" @*value="pruebas@gmail.com"*@ value="" />

                                </div>
                                <div class="form-outline mb-4">
                                    <input class="form-control" id="inputPassword" name="NContrasena" type="password" placeholder="Contraseña" @*value="12345"*@ autocomplete="off" value="" />
                                    <label for="inputPassword"> </label>
                                </div>
                                <div class="form-floating mb-3">
                                    @{if (ViewBag.Error != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                @ViewBag.Error
                                            </div>
                                        }
                                    }
                                </div>
                                <div class="text-center">

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-primary btn-lg btn-block" type="submit">Ingresar</button>
                                    </div>

                                    <br />

                                    <p>Necesitas una cuenta?  <a style="color: #393f81;" href="@Url.Action("Registrarse","Login")" class="mb-0">Registrate!</a></p>

                                </div>
                                <div class="row mt-2">

                                </div>
                            </form>

                        </div>



                    </div>
                </div>


                <div class="col-sm-6 px-0 d-none d-sm-block">
                    <img src="https://image.lexica.art/full_jpg/6d041e2a-5bff-4dd2-b7b7-26068eca0966"
                         alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                </div>
            </div>
        </div>



    </section>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>

    </script>
</body>
</html>
